
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TemplateSample.Models

@model List<PostVm>
@await Html.PartialAsync("Partial/IndexHeader");

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            @foreach (var item in Model)
            {
                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                            @item.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @item.Description
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#">@item.User</a>
                        on @item.AddDate
                    </p>
                </div>
                <hr>
            }


            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr>

